<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="@android:color/holo_blue_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/poto"
                app:civ_border_width="3dp"
                app:civ_border_color="@android:color/white"
                android:id="@+id/image2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muhammad Mugnisalam Magfira"
                android:gravity="center"
                android:layout_below="@id/image2"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:id="@+id/nama"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sukabumi, 03 November 1997"
                android:gravity="center"
                android:layout_below="@id/nama"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:id="@+id/ttl"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teknik Informatika UNIKOM"
                android:gravity="center"
                android:layout_below="@id/ttl"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:id="@+id/studi"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INTEREST"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/interest"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_pendaki2"
                android:id="@+id/pendaki"
                android:layout_below="@id/interest"
                android:layout_marginTop="30dp"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="3dp"
                android:layout_marginLeft="6dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/bbb"
                android:id="@+id/minum"
                android:layout_below="@id/interest"
                android:layout_marginTop="30dp"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="3dp"
                android:layout_centerHorizontal="true"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ccc"
                android:id="@+id/makan"
                android:layout_below="@id/interest"
                android:layout_marginTop="30dp"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="3dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mendaki Gunung"
                android:layout_below="@id/pendaki"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jus Alpukat"
                android:layout_below="@id/minum"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mie Goreng"
                android:layout_below="@id/makan"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"/>

            </RelativeLayout>

    </LinearLayout>

</FrameLayout>